{
  "manifest_version": 2,

  "name": "OCR-JPN",
  "description": "Select images with Japanese characters and get a dictionary definition.",
  "version": "1.0",

"permissions": ["tabs", "<all_urls>", "activeTab"],
"background": {
    "scripts": ["background.js"]
},

  "browser_action": {
    "default_icon": "icon.png",
    "default_popup": "popup.html"
  }
  ,  "content_scripts": [
    {
      "matches" : ["<all_urls>"],
      "css": ["selectimage.css"],
      "js": ["selectimage.js"]
    }
  ]
}